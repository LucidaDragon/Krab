<Window x:Class="Lucida.Krab.IDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lucida.Krab.IDE"
        mc:Ignorable="d"
        Title="Krab" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="Source" Grid.Column="0" AcceptsReturn="True" AcceptsTab="True" TextChanged="Source_TextChanged"/>
        <TextBox x:Name="Output" Grid.Column="1" IsReadOnly="True"/>
    </Grid>
</Window>
